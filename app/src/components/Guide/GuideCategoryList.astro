---
import { getPublishedGuides,	normalizeSpaceAndCase } from "../../utils/helper";
import { Icon } from 'astro-icon/components'
let { pathname } = Astro.url;
pathname = pathname.replace(/\/$/, '');	// trim trailing slash

const guides = await getPublishedGuides();
const categories: string[] = [...new Set(guides.map(article => article.data.category))].sort();

const categorieItems = categories.map((category: string)  => {
	const urlPath = `/guides/category/${normalizeSpaceAndCase(category)}`;
	return {
		name: category,
		selected: urlPath === pathname,
		url: urlPath,
	};
});

categorieItems.unshift({
	name: "All",
	selected: "/guides" === pathname,
	url: "/guides",
});
---

<div class="tags-wrapper">
	<div class="tags-list">
		{
			categorieItems.map((categoryItem) => (<a class:list={["tag",{ selected: categoryItem.selected }, ]} href={categoryItem.url}>{categoryItem.name}</a>))
		}
	</div>
	<div class="arrow-left" >
		<Icon name="fa6-solid:chevron-left" />
	</div>

	<div class="arrow-right">
		<Icon name="fa6-solid:chevron-right" />
	</div>
</div>
